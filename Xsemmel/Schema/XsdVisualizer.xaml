<UserControl x:Class="XSemmel.Schema.XsdVisualizer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" 
        d:DesignHeight="312" d:DesignWidth="966" 
        IsVisibleChanged="UserControl_IsVisibleChanged">
    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
        <DockPanel Name="pnlPaintArea" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top">
            <DockPanel.Effect>
                <DropShadowEffect ShadowDepth="4" Direction="320" Color="DarkGray" Opacity="0.5" BlurRadius="4"/>
            </DockPanel.Effect>
        </DockPanel>
    </ScrollViewer>
</UserControl>
